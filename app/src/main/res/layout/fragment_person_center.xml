<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/swipe_refresh_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent" android:layout_height="25dp"/>
        <RelativeLayout
                android:id="@+id/re_avatar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:id="@+id/imageview_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/default_user_logo"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="#353535"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#dadada"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="25dp"/>
        <RelativeLayout
                android:id="@+id/re_update_user_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:focusable="true">

            <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="用户名"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/textview_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/tv1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="null"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#dadada"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="25dp"/>
        <RelativeLayout
                android:id="@+id/re_update_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:focusable="true">

            <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="修改密码"
                    android:textColor="#353535"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginStart="11dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#dadada"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="25dp"/>
        <RelativeLayout
                android:id="@+id/re_update_display_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:focusable="true">

            <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="显示名"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/textview_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv3"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/tv3"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="null"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#dadada"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="25dp"/>
        <RelativeLayout
                android:id="@+id/re_update_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:focusable="true">

            <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="手机"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/textview_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/tv2"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="null"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
