<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools" 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/re_final_score"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:focusable="true">
        <EditText
                android:id="@+id/edit_final_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:gravity="right"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="null"
                android:inputType="numberDecimal"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded"/>
        <TextView
                android:id="@+id/tv_score_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="最终给分:"
                android:textColor="#353535"
                android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/re_score_bts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:focusable="true">
        <EditText
                android:id="@+id/edit_score_bts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/tv2"
                android:ellipsize="end"
                android:gravity="right"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="null"
                android:inputType="numberDecimal"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded"/>
        <TextView
                android:id="@+id/tv_score_bts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="背部体色得分:"
                android:textColor="#353535"
                android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/re_score_fts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:focusable="true">
        <EditText
                android:id="@+id/edit_score_fts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/tv2"
                android:ellipsize="end"
                android:gravity="right"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="null"
                android:inputType="numberDecimal"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded"/>
        <TextView
                android:id="@+id/tv_score_fts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="腹部体色得分:"
                android:textColor="#353535"
                android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/re_score_ec"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:focusable="true">
        <EditText
                android:id="@+id/edit_score_ec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/tv2"
                android:ellipsize="end"
                android:gravity="right"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="null"
                android:inputType="numberDecimal"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded"/>
        <TextView
                android:id="@+id/tv_score_ec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="额齿得分:"
                android:textColor="#353535"
                android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/re_score_dscc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:focusable="true">
        <EditText
                android:id="@+id/edit_score_dscc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/tv2"
                android:ellipsize="end"
                android:gravity="right"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="null"
                android:inputType="numberDecimal"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded"/>
        <TextView
                android:id="@+id/tv_score_dscc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="第四侧齿得分:"
                android:textColor="#353535"
                android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/re_score_bbyzt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true"
            android:focusable="true">
        <EditText
                android:id="@+id/edit_score_bbyzt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/tv2"
                android:ellipsize="end"
                android:gravity="right"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="null"
                android:inputType="numberDecimal"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded"/>
        <TextView
                android:id="@+id/tv_score_bbyzt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="背部疣状突得分:"
                android:textColor="#353535"
                android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>





